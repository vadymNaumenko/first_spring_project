<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder location="application.properties"/>
    <context:annotation-config/>

    <bean class="com.myspringproject.bpp.InjectBeanPostProcessor"/>
    <bean class="com.myspringproject.bpp.TransactionBeanPostProcessor"/>
    <bean class="com.myspringproject.bpp.AuditingBeanPostProcessor"/>
<!--    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>-->

<!--    <bean name="db" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="locations" value="application.properties"/>-->
<!--    </bean>-->

    <bean class="com.myspringproject.bfpp.LogBeanFactoryPostProcessors"/>
    <bean class="com.myspringproject.bfpp.VerifyPropertyBeanFactoryPostProcessors"/>

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.driver}"/>
    </bean>
    <bean id="pool2" class="com.myspringproject.database.pool.ConnectionPool"/>
    <bean id="pool" name="p1,p2,p3" class="com.myspringproject.database.pool.ConnectionPool">

        <constructor-arg name="userName" type="java.lang.String" value="${db.username}"/>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="${db.pool.size}"/>
        <constructor-arg name="args" type="java.util.List" >
            <list>
                <value>areg1=value1</value>
                <value>areg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties" type="java.util.Map">

           <null/>

        </constructor-arg>
<!--      #{} SpEL  -->
        <property name="properties" >
            <map>
                <entry key="url" value="postgresUrl"/>
                <entry key="password" value="qwerty"/>
                <entry key="driver" value="#{driver.substring(3)}"/>
                <entry key="test" value="#{driver.length() > 10}"/>
                <entry key="test" value="#{driver.length() > T(Math).random()*10}"/>
                <entry key="hosts" value="#{'${db.hosts}'.split(',')}"/>
                <entry key="currentUser" value="#{systemProperties['user.name']}"/>
            </map>
        </property>
    </bean>

    <bean id="companyRepository" class="com.myspringproject.database.repository.CompanyRepository" />

    <!--    <bean id="pool2" name="p4" class="com.myspringproject.database.pool.ConnectionPool"/>-->
</beans>