<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>
    <bean id="pool" name="p1,p2,p3" class="com.myspringproject.database.pool.ConnectionPool">
        <constructor-arg name="userName" type="java.lang.String" ref="driver"/>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="10"/>
        <constructor-arg name="args" type="java.util.List" >
            <list>
                <value>areg1=value1</value>
                <value>areg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="properties" type="java.util.Map">
            <map>
                <entry key="url" value="postgresUrl"/>
                <entry key="password" value="qwerty"/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="companyRepository" class="com.myspringproject.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="p2"/>
    </bean>

    <!--    <bean id="pool2" name="p4" class="com.myspringproject.database.pool.ConnectionPool"/>-->
</beans>